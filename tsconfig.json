{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "typeRoots": ["./node_modules/@types", "./src/types"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
